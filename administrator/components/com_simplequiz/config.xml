<?xml version="1.0" encoding="utf-8"?>
<config>
	<inlinehelp button="hide"/>
	<fieldset
		name="component"
		label="COM_SIMPLEQUIZ_COMPONENT">

        <field
            name="theme"
            type="list"
            label="COM_SIMPLEQUIZ_FIELD_THEME_LABEL"
            description="COM_SIMPLEQUIZ_FIELD_THEME_DESC"
            default="default"
            >
            <option value="default">Default (Bootstrap Cards)</option>
        </field>
</fieldset>
<fieldset
name="globaloptions"
label="COM_SIMPLEQUIZ_GLOBAL_OPTIONS_LABEL">


<field
name="noteglobal"
type="note"
label="COM_SIMPLEQUIZ_GLOBAL_OPTIONS_LABEL"
description="COM_SIMPLEQUIZ_GLOBAL_OPTIONS_DESC"
/>
<field
name="access"
type="accesslevel"
label="COM_SIMPLEQUIZ_FIELD_QUIZACCESSLEVEL_LABEL"
description="COM_SIMPLEQUIZ_FIELD_QUIZACCESSLEVEL_DESC"
default="1"
/>
<field
name="randomize_mchoice"
type="radio"
label="COM_SIMPLEQUIZ_FIELD_RANDOMIZE_MCHOICE_LABEL"
description="COM_SIMPLEQUIZ_FIELD_RANDOMIZE_MCHOICE_DESC"
default="0"
>
<option value="1">JYES</option>
<option value="0">JNO</option>
</field>

<field
name="load_mathjax"
type="radio"
label="COM_SIMPLEQUIZ_FIELD_LOAD_MATHJAX_LABEL"
description="COM_SIMPLEQUIZ_FIELD_LOAD_MATHJAX_DESC"
default="0"
>
<option value="1">JYES</option>
<option value="0">JNO</option>
</field>

</fieldset>

<fieldset
name="language"
>
<field
name="lang_pass"
type="textarea"
label="COM_SIMPLEQUIZ_FIELD_LANG_PASS_LABEL"
description="COM_SIMPLEQUIZ_FIELD_LANG_PASS_DESC"
default="You have passed this quiz!"
/>
<field
name="lang_fail"
type="textarea"
label="COM_SIMPLEQUIZ_FIELD_LANG_FAIL_LABEL"
description="COM_SIMPLEQUIZ_FIELD_LANG_FAIL_DESC"
default="Unfortunately, you haven't passed this quiz."
/>
</fieldset>

<!-- access settings -->
<fieldset
name="permissions"
label="JCONFIG_PERMISSIONS_LABEL"
description="JCONFIG_PERMISSIONS_DESC"
>
<field
    name="rules"
    type="rules"
    label="JCONFIG_PERMISSIONS_LABEL"
    validate="rules"
    filter="rules"
    component="com_simplequiz"
    section="component"
/>
</fieldset>

</config>

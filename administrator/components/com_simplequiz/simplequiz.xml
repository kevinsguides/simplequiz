<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="4.0" method="upgrade">
    <name>com_simplequiz</name>
    <creationDate>Mar 2023</creationDate>
    <author>KevinsGuides</author>
    <authorEmail>kevin@kevinsguides.com</authorEmail>
    <authorUrl>https://kevinsguides.com</authorUrl>
    <version>0.1.0</version>
    <description>Simple Quiz</description>
    <namespace path="src/">KevinsGuides\Component\SimpleQuiz</namespace>


<!-- database stuff -->
<install>
    <sql>
        <file driver="mysql" charset="utf8" version="0.0.9">sql/install/install.sql</file>
    </sql>
</install>
<update>
    <schemas>
        <schemapath type="mysql">sql/updates</schemapath>
    </schemas>
</update>
<uninstall>
    <sql>
        <file driver="mysql" charset="utf8" version="0.0.9">sql/install/uninstall.sql</file>
    </sql>
</uninstall>

<languages>
    <language tag="en-GB">admin/language/en-GB/com_simplequiz.ini</language>
    <language tag="en-GB">admin/language/en-GB/com_simplequiz.sys.ini</language>
</languages>
    
<files folder="site">
    <folder>src</folder>
    <folder>tmpl</folder>
</files>

    <administration>
        <menu link="index.php?option=com_simplequiz">COM_SIMPLEQUIZ</menu>
        <submenu>
            <menu view="SimpleQuizzes">
                COM_SIMPLEQUIZ_QUIZZES
            </menu>
            <menu view="Questions">
                COM_SIMPLEQUIZ_QUESTIONS
            </menu>
            <menu link="option=com_categories&amp;view=categories&amp;extension=com_simplequiz">
                COM_SIMPLEQUIZ_CATEGORIES
            </menu>
            <menu link="option=com_simplequiz&amp;view=Help">
                COM_SIMPLEQUIZ_HELP
            </menu>
            </submenu>
        <files folder="admin">
            <folder>forms</folder>
            <folder>language</folder>
            <folder>src</folder>
            <folder>sql</folder>
            <folder>services</folder>
            <folder>tmpl</folder>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
        </files>
    </administration>

    </extension>
